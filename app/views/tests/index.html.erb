<h1>Listing tests</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Threads</th>
    <th>Seconds</th>
    <th>Msg size</th>
    <th>Test run</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tests.each do |test| %>
  <tr>
    <td><%= test.type %></td>
    <td><%= test.threads %></td>
    <td><%= test.seconds %></td>
    <td><%= test.msg_size %></td>
    <td><%= test.test_run %></td>
    <td><%= link_to 'Show', test %></td>
    <td><%= link_to 'Edit', edit_test_path(test) %></td>
    <td><%= link_to 'Destroy', test, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

