<%- model_class = @test_run.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:sysname) %>:</strong><br>
  <%= @test_run.sysname %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:release) %>:</strong><br>
  <%= @test_run.release %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:version) %>:</strong><br>
  <%= @test_run.version %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:machine) %>:</strong><br>
  <%= @test_run.machine %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:notes) %>:</strong><br>
  <%= @test_run.notes %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              test_runs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_test_run_path(@test_run), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              test_run_path(@test_run),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
