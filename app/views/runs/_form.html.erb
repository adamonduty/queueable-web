<%= form_for @run, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :backend, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :backend, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :threads, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :threads, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :seconds, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :seconds, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :msg_size, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :msg_size, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :batch_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :batch_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                runs_path, :class => 'btn' %>
  </div>
<% end %>
