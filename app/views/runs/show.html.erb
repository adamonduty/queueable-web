<%- model_class = @run.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:backend) %>:</strong><br>
  <%= @run.backend %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:threads) %>:</strong><br>
  <%= @run.threads %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:seconds) %>:</strong><br>
  <%= @run.seconds %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:msg_size) %>:</strong><br>
  <%= @run.msg_size %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:batch_id) %>:</strong><br>
  <%= @run.batch_id %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              runs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_run_path(@run), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              run_path(@run),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
