<%- model_class = Run.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:backend) %></th>
      <th><%= model_class.human_attribute_name(:threads) %></th>
      <th><%= model_class.human_attribute_name(:seconds) %></th>
      <th><%= model_class.human_attribute_name(:msg_size) %></th>
      <th><%= model_class.human_attribute_name(:batch_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @runs.each do |run| %>
      <tr>
        <td><%= link_to run.id, run_path(run) %></td>
        <td><%= run.backend %></td>
        <td><%= run.threads %></td>
        <td><%= run.seconds %></td>
        <td><%= run.msg_size %></td>
        <td><%= run.batch_id %></td>
        <td><%=l run.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_run_path(run), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      run_path(run),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_run_path,
            :class => 'btn btn-primary' %>
