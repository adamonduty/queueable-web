<%= form_for [:platform, @batch], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :notes, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :notes, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :platform_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :platform_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                platform_batches_path, :class => 'btn' %>
  </div>
<% end %>
